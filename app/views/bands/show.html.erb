<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @band.name %>
</p>

<p>
  <strong>Member:</strong>
  <%= @band.member %>
</p>

<p>
  <strong>Music:</strong>
  <% if @band.music? %>
    <div class="music">
      <%= audio_tag @band.music.url , controls: true %>
    </div>
  <% end %>
</p>

<p>
  <strong>Image:</strong>
  <% if @band.image? %>
    <div class="thumbnail">
      <%= image_tag @band.image.url %>
    </div>
  <% end %>
</p>

<p>
  <strong>Description:</strong>
  <%= @band.description %>
</p>

<%= link_to 'Edit', edit_band_path(@band) %> |
<%= link_to 'Back', bands_path %>
