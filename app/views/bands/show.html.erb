<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @band.name %>
</p>

<p>
  <strong>Member:</strong>
  <%= @band.member %>
</p>

<p>
  <strong>Music:</strong>
  <% if @band.music? %>
    <div class="music">
      <%= audio_tag @band.music.url , controls: true %>
    </div>
  <% end %>
</p>

<p>
  <strong>Image:</strong>
  <% if @band.image? %>
    <div class="thumbnail">
      <%= image_tag @band.image.url %>
    </div>
  <% end %>
</p>

<p>
  <strong>Genre:</strong>
  <% if @band.genre_list.present? %>
    <%= render 'bands/tag_list', tag_list: @band.genre_list %>
  <% end %>
</p>

<p>
  <strong>Description:</strong>
  <%= @band.description %>
</p>

<p>
  <strong>Prefecture:</strong>
    <%= @band.prefecture %>
</p>

<p>
  <strong>活動年:</strong>
  <%= @band.start_year %>年頃から〜<%= @band.end_year %>年頃まで
</p>

<%= link_to 'Edit', edit_band_path(@band) %> |
<%= link_to 'Back', bands_path %>
